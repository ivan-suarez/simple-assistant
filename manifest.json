{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "description": "A basic Firefox extension.",
    "permissions": [
      "storage",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
        {
          "matches": ["*://*.twitter.com/*"],
          "js": ["content_script.js"]
        }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  